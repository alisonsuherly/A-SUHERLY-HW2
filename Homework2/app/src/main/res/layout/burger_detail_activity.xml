<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/burgerImage"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            tools:srcCompat="@tools:sample/avatars" />

        <TextView
            android:id="@+id/burgerName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:textSize="40sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView5"
                android:layout_width="0dp"
                android:layout_height="47dp"
                android:layout_weight="1"
                android:text=" $"
                android:textSize="30dp" />

            <TextView
                android:id="@+id/price"
                android:layout_width="142dp"
                android:layout_height="wrap_content"
                android:paddingTop="20dp"
                android:paddingRight="20dp"
                android:paddingBottom="20dp"
                android:text="6"
                android:textSize="30dp" />

            <Button
                android:id="@+id/buttonMinus"
                android:layout_width="5dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="minusButtonRespond"
                android:text="-"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/itemCount"
                android:layout_width="42dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingLeft="30dp"
                android:text="0"
                android:textSize="25dp" />

            <Button
                android:id="@+id/buttonPlus"
                android:layout_width="5dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="addButtonRespond"
                android:text="+"
                android:textSize="20dp" />

        </LinearLayout>

        <TextView
            android:id="@+id/burgerDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:textSize="22dp" />

        <Button
            android:id="@+id/addOrderButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="addToOrderButton2"
            android:text="ADD TO ORDER"
            android:textColorHint="#FF5722" />

    </LinearLayout>
</ScrollView>
